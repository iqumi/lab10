<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.lab10.CalculatorController">

    <children>

        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

            <Label fx:id="display"
                   prefHeight="60"
                   style="-fx-background-color: #222; -fx-text-fill: white; -fx-font-size: 26;"
                   alignment="CENTER_RIGHT"/>

            <GridPane hgap="10" vgap="10">

                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints percentHeight="25"/>
                    <RowConstraints percentHeight="25"/>
                    <RowConstraints percentHeight="25"/>
                    <RowConstraints percentHeight="25"/>
                </rowConstraints>

                <!-- ROW 1 -->
                <Button text="7" onAction="#onDigitClick" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Button text="8" onAction="#onDigitClick" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Button text="9" onAction="#onDigitClick" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <Button text="/" onAction="#onOperatorClick" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <!-- ROW 2 -->
                <Button text="4" onAction="#onDigitClick" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Button text="5" onAction="#onDigitClick" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Button text="6" onAction="#onDigitClick" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <Button text="*" onAction="#onOperatorClick" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <!-- ROW 3 -->
                <Button text="1" onAction="#onDigitClick" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Button text="2" onAction="#onDigitClick" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Button text="3" onAction="#onDigitClick" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <Button text="-" onAction="#onOperatorClick" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                <!-- ROW 4 -->
                <Button text="0" onAction="#onDigitClick" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Button text="." onAction="#onDigitClick" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Button text="C" onAction="#onClear" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <Button text="+" onAction="#onOperatorClick" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

                <!-- EQUAL button -->
                <Button text="=" style="-fx-font-size:20;"
                        onAction="#onEqual"
                        GridPane.rowIndex="4" GridPane.columnIndex="0"
                        GridPane.columnSpan="4"/>
            </GridPane>
        </VBox>
    </children>
</AnchorPane>
